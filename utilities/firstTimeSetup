sudo chmod +x ledwebsite_update.sh
cp ledwebsite.sh /etc/init.d/
cp ledwebsite_update.sh /etc/init.d/
sudo update-rc.d ledwebsite.sh defaults
sudo update-rc.d ledwebsite_update.sh defaults

